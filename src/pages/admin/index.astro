---
import Header from "@/src/core/components/Header.astro";
import Layout from "@/src/core/Layout.astro";
import Button from "./_components/Button.astro";
import Caption from "./_components/Caption.astro";

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/admin/login");
}
---

<Layout>
  <Header />
  <main
    class="flex flex-col min-h-[85vh] md:w-6/12 mx-auto items-center justify-center pt-12"
  >
    <h1 class="text-3xl">Panel de Control</h1>
    <p class="text-sm text-gray-600 mb-4 text-center">
      Bienvenido al panel de administración. Gestiona todos los aspectos del
      sitio.
    </p>
    <ul class="grid grid-cols-3 gap-3 w-full">
      <li class="">
        <Button icon="lucide:pencil-line" to="/blog/new">Escribir Blog</Button>
      </li>
      <li class="">
        <Button icon="lucide:mouse-pointer-click" to="/admin/requests"
          >Ver Solicitudes</Button
        >
      </li>
      <li class="">
        <Button icon="lucide:users-round">Gestionar Clientes</Button>
      </li>
      <li class="">
        <Button icon="lucide:log-out" to="/admin/logout">Cerrar sesión</Button>
      </li>
    </ul>
    <Caption />
  </main>
</Layout>
