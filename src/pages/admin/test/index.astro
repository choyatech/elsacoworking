---
import Layout from "@/src/core/Layout.astro";
---

<Layout>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-2xl mb-4">Subir Archivos</h1>
    <form
      action="/admin/test/upload"
      method="post"
      enctype="multipart/form-data"
      class="space-y-4"
    >
      <div class="flex flex-col gap-2">
        <label for="files" class="text-sm text-gray-600"
          >Seleccionar archivos</label
        >
        <input
          type="file"
          name="files"
          id="files"
          multiple
          accept="image/*,.pdf,.doc,.docx,.xls,.xlsx"
          class="block w-full text-sm text-gray-500
            file:mr-4 file:py-2 file:px-4
            file:rounded-md file:border-0
            file:text-sm file:font-medium
            file:bg-gray-50 file:text-gray-700
            hover:file:bg-gray-100
            file:cursor-pointer"
        />
      </div>
      <button
        type="submit"
        class="px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-gray-700 transition-colors"
      >
        Subir Archivos
      </button>
    </form>
  </main>
</Layout>
