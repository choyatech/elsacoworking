---
export interface Props {
  titleCard: string;
  descriptionCard: string;
  cta_text: string;
  variant: "primary" | "secondary";
}

const { titleCard, descriptionCard, cta_text, variant } = Astro.props;
---

<div
  class={`p-8 rounded-lg shadow-lg transform transition-all duration-300 cursor-pointer ${
    variant === "primary"
      ? "bg-gradient-to-b from-slate-600 to-slate-900 text-white"
      : "bg-white text-gray-800 border border-gray-200"
  }`}
>
  <h2 class="text-2xl font-bold mb-4">{titleCard}</h2>
  <p class="text-lg mb-6 text-start">{descriptionCard}</p>
  <a
    href="#"
    class={`inline-block px-6 py-3 rounded-full font-semibold ${
      variant === "primary"
        ? "bg-white text-slate-600 hover:bg-gray-100"
        : "bg-slate-600 text-white hover:bg-slate-700"
    }`}
    aria-label={`Ver detalles del ${titleCard}`}
  >
    {cta_text}
  </a>
</div>
