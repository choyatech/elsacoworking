---
interface Props {
  /**
   * Si es true, el header se mostrará en modo oscuro.
   * Por defecto: false.
   */
  isDarkMode?: boolean;
}

const { isDarkMode = false } = Astro.props;
---

<!--
  Añade el atributo "x-data" de AlpineJS en el <header> para manejar el estado de apertura del menú
  en móvil (open = false cerrado, true abierto).
-->
<header
  x-data="{ open: false }"
  class={`w-full p-4 transition-colors duration-300 ${
    isDarkMode ? "text-white" : "bg-gray-900 text-white"
  }`}
>
  <div class="container mx-auto flex justify-between items-center">
    <!-- LOGOTIPO -->
    <a href="/" aria-label="Ir a la página de inicio" class="flex-shrink-0">
      <!-- Ajusta la altura/ancho de la imagen según tu preferencia -->
      <img
        class="h-16 w-auto"
        src="/h-dealer-logo-white.svg"
        alt="Logotipo de H Dealer"
      />
    </a>

    <!-- BOTÓN HAMBURGER (visible solo en móviles) -->
    <button
      class="md:hidden text-inherit"
      @click="open = !open"
      aria-label="Abrir menú de navegación"
    >
      <!-- Icono de hamburguesa (puedes sustituirlo por otro) -->
      <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
        <path x-show="!open" d="M4 6h16M4 12h16M4 18h16"></path>
        <path x-show="open" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- NAVEGACIÓN (oculta en móvil, visible en desktop) -->
    <nav aria-label="Menú principal" class="hidden md:block">
      <ul class="flex gap-5 items-center">
        <li class="border-b-2 border-transparent hover:border-primary">
          <a href="/">Inicio</a>
        </li>
        <li class="border-b-2 border-transparent hover:border-primary">
          <a href="/sobre-nosotros">Sobre Nosotros</a>
        </li>
        <li class="border-b-2 border-transparent hover:border-primary">
          <a href="/servicios">Servicios</a>
        </li>
        <li class="border-b-2 border-transparent hover:border-primary">
          <a href="/blog">Blog</a>
        </li>
      </ul>
    </nav>
  </div>

  <!-- MENÚ DESPLEGABLE EN MÓVIL -->
  <div
    class="md:hidden"
    x-show="open"
    @click.outside="open = false"
    x-transition:enter="transition transform origin-top"
    x-transition:enter-start="scale-y-0"
    x-transition:enter-end="scale-y-100"
    x-transition:leave="transition transform origin-top"
    x-transition:leave-start="scale-y-100"
    x-transition:leave-end="scale-y-0"
  >
    <nav aria-label="Menú principal móvil" class="p-4">
      <ul class="flex flex-col gap-4">
        <li class="border-b-2 border-transparent hover:border-primary">
          <a href="/">Inicio</a>
        </li>
        <li class="border-b-2 border-transparent hover:border-primary">
          <a href="/sobre-nosotros">Sobre Nosotros</a>
        </li>
        <li class="border-b-2 border-transparent hover:border-primary">
          <a href="/servicios">Servicios</a>
        </li>
        <li class="border-b-2 border-transparent hover:border-primary">
          <a href="/blog">Blog</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
