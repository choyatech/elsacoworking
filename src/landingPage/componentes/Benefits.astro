<section class="w-full mx-auto flex justify-center p-10">
  <main class="text-center w-full">
    <!-- Heading -->
    <h1 class="text-4xl mx-auto font-titles font-black">Beneficios</h1>
    <p class="font-euphemia w-8/12 mx-auto text-gray-600">
      Aquí puedes proyectar una imagen profesional sin rentar una oficina
      completa. Te ofrecen soporte administrativo, espacio para juntas y
      atención para tus clientes. Ahorras tiempo y dinero, y te enfocas en hacer
      crecer tu negocio sin preocuparte por los detalles.
    </p>

    <!-- Carousel Container -->
    <div
      class="relative flex justify-center items-center w-full h-[400px] mt-10 overflow-hidden"
    >
      <div
        class="carousel-track relative flex w-full justify-center items-center"
      >
        <!-- Imagen 1 -->
        <div
          class="carousel-item absolute transition-transform duration-700 ease-in-out"
        >
          <img
            src="https://images.pexels.com/photos/380768/pexels-photo-380768.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            class="rounded-lg shadow-lg object-cover w-[450px] h-[250px]"
            alt="Interior moderno de oficina"
          />
        </div>

        <!-- Imagen 2 (Central) -->
        <div
          class="carousel-item absolute transition-transform duration-700 ease-in-out"
        >
          <img
            src="https://images.pexels.com/photos/380769/pexels-photo-380769.jpeg"
            class="rounded-lg shadow-lg object-cover w-[500px] h-[300px]"
            alt="Espacio de oficina moderno"
          />
          <div
            class="absolute inset-0 bg-black/30 flex flex-col justify-end p-5 rounded-lg"
          >
            <h2 class="text-white font-bold text-xl">Cafetería</h2>
            <p class="text-white text-sm">
              Servicios de cafetería para tus reuniones
            </p>
          </div>
        </div>

        <!-- Imagen 3 -->
        <div
          class="carousel-item absolute transition-transform duration-700 ease-in-out"
        >
          <img
            src="https://images.pexels.com/photos/245240/pexels-photo-245240.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            class="rounded-lg shadow-lg object-cover w-[450px] h-[250px]"
            alt="Vista moderna de oficina"
          />
        </div>
      </div>

      <!-- Botones de Control -->
      <button
        class="absolute left-0 z-10 bg-black/40 hover:bg-black/80 text-white p-3 rounded-full"
        data-carousel-prev
      >
        <svg
          class="w-6 h-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 6 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 1 1 5l4 4"></path>
        </svg>
      </button>

      <button
        class="absolute right-0 z-10 bg-black/40 hover:bg-black/80 text-white p-3 rounded-full"
        data-carousel-next
      >
        <svg
          class="w-6 h-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 6 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 9 4-4-4-4"></path>
        </svg>
      </button>
    </div>
  </main>
</section>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const carouselItems = document.querySelectorAll(".carousel-item");
    const prevButton = document.querySelector("[data-carousel-prev]");
    const nextButton = document.querySelector("[data-carousel-next]");
    let currentIndex = 1; // La imagen central es la inicial

    function updateCarousel() {
      carouselItems.forEach((item, index) => {
        const offset = index - currentIndex;

        if (offset === 0) {
          // Imagen central
          item.style.transform = "translateX(0%) scale(1)";
          item.style.zIndex = "10";
          item.style.opacity = "1";
        } else if (offset === -1) {
          // Imagen izquierda
          item.style.transform = "translateX(-50%) scale(0.85)";
          item.style.zIndex = "5";
          item.style.opacity = "0.7";
        } else if (offset === 1) {
          // Imagen derecha
          item.style.transform = "translateX(50%) scale(0.85)";
          item.style.zIndex = "5";
          item.style.opacity = "0.7";
        } else {
          // Imágenes fuera de la vista
          item.style.transform = `translateX(${offset * 100}%) scale(0.7)`;
          item.style.zIndex = "1";
          item.style.opacity = "0";
        }
      });
    }

    function nextSlide() {
      currentIndex = (currentIndex + 1) % carouselItems.length;
      updateCarousel();
    }

    function prevSlide() {
      currentIndex =
        (currentIndex - 1 + carouselItems.length) % carouselItems.length;
      updateCarousel();
    }

    prevButton?.addEventListener("click", prevSlide);
    nextButton?.addEventListener("click", nextSlide);

    // Inicializar la posición
    updateCarousel();
  });
</script>
